$(document).ready(function() {
		var retour = "<%=@task.status%>" ;
		console.log(retour);
	if (retour === "true") {
		$("#<%=@task.id%>").css({"text-decoration": "line-through"}).fadeIn('1000');
		retour = "" ;
	}else {
		$("#<%=@task.id%>").css({"text-decoration": "none"});
		retour = "true";
	}
});